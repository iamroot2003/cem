Rem TFEVUSR
Rem TO FIND ENTROPY VALUE USING SIMPON'S RULE
DEFINE FUNCTION (X) =A2/X+B2+C2*X
10 PRINT
PRINT
INPUT "THE VALUEOF CONSTANTS A,B, C"; A2, B2,C2
IF A2=0 THEN 10000
INPUT " LOWER AND UPPER LIMITS"; X1, X2
INPUT " INTIAL N AND TOLERANCE LIMIT"; N, T
GOSUB 1000
PRIBNT "INTERVAL USED"; N
PRINT "ENTROPY VALUE IS"; EV
GOTO 10
REM SUBROUTINE PROGRAM: USE OF SIMPON'S FORMULA
1000 F2=0
C=FNQ(X1)+FNQ(X2):
100 D=(X2-X1)/N:
S1=0 : S2=0
FOR X=X1+D TO X2-3* D STEP 2* D
S1=S1+FNQ(X)
S2=S2+FNQ(X-D)
NEXT X
S1=S1+FNQ(X2-D)
EV=(C+4*S1+2*S2)* D/3
IF T>ABS(EV-F2)/EV THEN 500
Y+2* N
F2=EV
GOTO 100
500 RETURN
10000 END
